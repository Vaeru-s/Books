{% extends 'admin/baseadmin.html.twig' %}
{% block body %}
    {{ parent() }}
     {{ form_start(form) }}
    <div class="container-fluid border-black bg-center">
            <div class="my-custom-class-for-errors">
                    {{ form_errors(form) }}
            </div>

            <div class="row">
                Название категории </br>
                {{ form_widget(form.name, {'value' :  category.name }) }}
            </div>
            <div class="row">
                Описание категории </br>
                {{ form_widget(form.description, {'value' :  category.description}) }}
            </div>
             <div class="row">
                {{ form_widget(form.change) }}
            </div>
   </div>
        {{ form_end(form) }}
{% endblock %}
